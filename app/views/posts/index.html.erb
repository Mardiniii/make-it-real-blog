<div class="container">
  <div class="row">
    <h1>Post publicados en el blog</h1>

    <div class="col-md-12 text-right">
      <%= link_to 'Nuevo Post', new_post_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <th>Autor</th>
          <th>Título</th>
          <th>Contenido</th>
          <th>Opciones</th>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.author %></td>
              <td><%= post.title %></td>
              <td><%= post.content %></td>
              <td>
                <%= link_to post do %>
                  <i class="fa fa-eye" aria-hidden="true"></i>
                <% end %> -
                <%= link_to edit_post_path(post) do %>
                  <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                <% end %> -
                <%= link_to post, method: :delete, data: { confirm: 'Estás seguro de eliminar este post?' } do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>
