<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @post.title %></h1>
      <h3><%= @post.author %></h3>

      <p><%= @post.content %></p>

    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right">
      <%= link_to 'Ver todos', posts_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row">
    <% @comments.each do |comment| %>
      <div class="col-md-12">
        <h3><%= comment.author %></h3>
        <p><%= comment.content %></p>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= form_for @comment do |f| %>
        <%= f.hidden_field :post_id, value: @post.id %>

        <div class="form-group">
          <%= f.label :author, 'Autor:' %>
          <%= f.text_field :author, required: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :content, 'Autor:' %>
          <%= f.text_area :content, required: true, class: 'form-control' %>
        </div>

        <div class="form-group text-right">
          <%= f.submit "Comentar", class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>
  </div>

</div>
